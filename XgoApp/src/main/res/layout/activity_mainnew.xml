<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue21">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="21sp"
            tools:text="XGO\nwifi已连接" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="65dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/main_show_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="268dp"
                    android:layout_height="268dp"
                    android:src="@drawable/icon_performance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:text="@string/performance"
                    android:textColor="@color/blue36"
                    android:textSize="29sp" />

            </LinearLayout>

            <View
                android:layout_width="90dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/main_contract_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="268dp"
                    android:layout_height="268dp"
                    android:src="@drawable/icon_control" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:text="@string/control"
                    android:textColor="@color/blue36"
                    android:textSize="29sp" />

            </LinearLayout>

            <View
                android:layout_width="90dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/main_aimode_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="268dp"
                    android:layout_height="268dp"
                    android:src="@drawable/icon_aimodule" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:text="@string/aimodule"
                    android:textColor="@color/blue36"
                    android:textSize="29sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        >
        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/icon_back"/>

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:background="@color/transparent"
            android:src="@drawable/icon_set"
            android:contentDescription="@string/setting" />

        <ImageView
            android:id="@+id/main_set_img"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="108dp"
            android:src="@drawable/icon_debug"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>