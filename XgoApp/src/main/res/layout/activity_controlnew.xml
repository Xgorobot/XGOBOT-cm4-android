<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue21"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/icon_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/control_normal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue1b"
                android:paddingLeft="40dp"
                android:paddingTop="17dp"
                android:paddingRight="40dp"
                android:paddingBottom="17dp"
                android:text="普通模式"
                android:textColor="@color/gray_8b"
                android:textSize="21sp" />


            <View
                android:layout_width="23dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/control_advance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue1b"
                android:paddingLeft="40dp"
                android:paddingTop="17dp"
                android:paddingRight="40dp"
                android:paddingBottom="17dp"
                android:text="高级模式"
                android:textColor="@color/gray_8b"
                android:textSize="21sp" />


            <View
                android:layout_width="23dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/control_singleg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue1b"
                android:paddingLeft="40dp"
                android:paddingTop="17dp"
                android:paddingRight="40dp"
                android:paddingBottom="17dp"
                android:text="单腿模式"
                android:textColor="@color/gray_8b"
                android:textSize="21sp" />


            <View
                android:layout_width="23dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/control_xyz_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue1b"
                android:paddingLeft="40dp"
                android:paddingTop="17dp"
                android:paddingRight="40dp"
                android:paddingBottom="17dp"
                android:text="XYZ轴"
                android:textColor="@color/gray_8b"
                android:textSize="21sp" />

        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/control_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>