<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="37dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/motionmode_upleft_selector" />

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/motionmode_upright_selector" />
            </RelativeLayout>

            <com.luwu.xgo_robot.mView.ButtonView
                android:id="@+id/motionmode_btn_view"
                android:layout_width="409dp"
                android:layout_height="409dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:downPress="@drawable/icon_down_progress"
                app:leftPress="@drawable/icon_left_progress"
                app:noPress="@drawable/icon_default_progress"
                app:rightPress="@drawable/icon_right_progress"
                app:upPress="@drawable/icon_up_progress" />

        </LinearLayout>

        <View
            android:layout_width="69dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="690dp"
                android:layout_height="372dp"
                android:layout_gravity="center_horizontal">

                <WebView
                    android:id="@+id/motionmode_web"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:overScrollMode="never" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/motionmode_walk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="WALK"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/bg_text_blue"/>

                <View
                    android:layout_width="36dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/motionmode_trot_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TROT"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/bg_text_white"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="27dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginRight="27dp"
            android:layout_weight="1"
            android:background="@drawable/shape_blue_6"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="夹爪"
                        android:textColor="#8BA4C7"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="(30-50)"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </RelativeLayout>


                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:max="50"
                    android:maxHeight="7dp"
                    android:min="30"
                    android:minHeight="7dp"
                    android:progress="35"
                    android:progressDrawable="@drawable/seekbar_progress_drawable_blue28"
                    android:thumb="@drawable/seekbar_white_shape" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="X轴"
                        android:textColor="#8BA4C7"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="(30-50)"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </RelativeLayout>


                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:max="50"
                    android:maxHeight="7dp"
                    android:min="30"
                    android:minHeight="7dp"
                    android:progress="38"
                    android:progressDrawable="@drawable/seekbar_progress_drawable_redca"
                    android:thumb="@drawable/seekbar_white_shape" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Y轴"
                        android:textColor="#8BA4C7"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="(30-50)"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </RelativeLayout>


                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="9dp"
                    android:max="50"
                    android:maxHeight="7dp"
                    android:min="30"
                    android:minHeight="7dp"
                    android:progress="40"
                    android:progressDrawable="@drawable/seekbar_progress_drawable_blue36"
                    android:thumb="@drawable/seekbar_white_shape" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="30dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>





