<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue21"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标定模式"
            android:textColor="@color/white"
            android:textSize="36sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="483dp"
        android:layout_height="344dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68dp"
        android:src="@drawable/default_debug" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="49dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始标定"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:paddingLeft="84dp"
            android:paddingRight="84dp"
            android:background="@drawable/bg_text_blue"
            />
        <View
            android:layout_width="110dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calibrated"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:paddingLeft="84dp"
            android:paddingRight="84dp"
            android:background="@drawable/debug_text_border"
            />
    </LinearLayout>
</LinearLayout>