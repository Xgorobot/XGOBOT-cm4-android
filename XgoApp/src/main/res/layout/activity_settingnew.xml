<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/baseset"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="92dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xgolanguage"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <RadioButton
                android:id="@+id/setting_flowsys_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69dp"
                android:button="@drawable/radiobutton_selector"
                android:checked="true"
                android:text="@string/flowsys"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <RadioButton
                android:id="@+id/setting_chinese_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69dp"
                android:button="@drawable/radiobutton_selector"
                android:text="@string/chinese"
                android:textColor="@color/gray_8b"
                android:textSize="40sp" />

            <RadioButton
                android:id="@+id/setting_english_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69dp"
                android:button="@drawable/radiobutton_selector"
                android:text="@string/english"
                android:textColor="@color/gray_8b"
                android:textSize="40sp" />

            <RadioButton
                android:id="@+id/setting_japanese_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69dp"
                android:button="@drawable/radiobutton_selector"
                android:text="@string/japanese"
                android:textColor="@color/gray_8b"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="74dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/devoptions"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69dp"
                android:text="@string/devdesc"
                android:textColor="@color/gray_8b"
                android:textSize="40sp" />


            <RadioButton
                android:id="@+id/setting_yes_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69dp"
                android:button="@drawable/radiobutton_selector"
                android:checked="true"
                android:text="@string/btyes"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <RadioButton
                android:id="@+id/setting_no_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69dp"
                android:button="@drawable/radiobutton_selector"
                android:text="@string/btno"
                android:textColor="@color/gray_8b"
                android:textSize="40sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="72dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deviceinfo"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/setting_deviceinfo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69dp"
                android:textColor="@color/gray_8b"
                android:textSize="40sp"
                tools:text="设备信息这里" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp">

        <ImageView
            android:id="@+id/main_back_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="41dp"
            android:src="@drawable/icon_back" />
    </RelativeLayout>

</RelativeLayout>